    // -------------------------------------------------------------------------------------------
    // Rust settings
    //
    "rust-analyzer.check.command": "clippy",
    "rust-analyzer.imports.granularity.group": "module",
    "[rust]": {
        "editor.rulers": [
            {
                "column": 100
            }
        ]
    },
    // -------------------------------------------------------------------------------------------
    // GitLens
    //
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    // -------------------------------------------------------------------------------------------
    // Spell Checker
    //
    "cSpell.userWords": [
        "Loudet",
        "Zenoh",
        "Zetta"
    ],
    "cSpell.spellCheckOnlyWorkspaceFiles": true,
    "cSpell.language": "en",
    // Only check the spelling of comments.
    //
    // I will need to add a `languageId` for all the programming languages for
    // which I want to have that behavior.
    "cSpell.languageSettings": [
        {
            "languageId": "python",
            "includeRegExpList": [
                "/#.*/",
                "/('''|\"\"\")[^\\1]+?\\1/g"
            ]
        },
        {
            "languageId": "yaml",
            "includeRegExpList": [
                "/#.*/"
            ]
        },
        {
            // "jsonc" is JSON with comments.
            "languageId": "jsonc",
            "includeRegExpList": [
                "/\/\/.*/"
            ]
        },
        {
            "languageId": "rust",
            "includeRegExpList": [
                "CStyleComment"
            ]
        }
    ],
    // -------------------------------------------------------------------------------------------
    // Markdown
    //
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.rulers": [
            120
        ]
    },
    // -------------------------------------------------------------------------------------------
    // Even Better TOML
    //
    "[toml]": {
        "editor.rulers": [
            80
        ]
    },
    "evenBetterToml.formatter.alignComments": true,
    "evenBetterToml.formatter.alignEntries": false,
    "evenBetterToml.formatter.arrayAutoExpand": true,
    "evenBetterToml.formatter.inlineTableExpand": true,
    "evenBetterToml.formatter.arrayTrailingComma": true,
    "evenBetterToml.formatter.allowedBlankLines": 1,
    "evenBetterToml.formatter.reorderArrays": true,
    "evenBetterToml.formatter.reorderKeys": true,
    "evenBetterToml.formatter.compactArrays": true,
    "evenBetterToml.formatter.columnWidth": 80,
    "evenBetterToml.formatter.indentEntries": false,
    "evenBetterToml.formatter.indentString": "  ",
    // -------------------------------------------------------------------------------------------
    // Project Manager
    //
    "projectManager.git.baseFolders": [
        "~/dev"
    ]
